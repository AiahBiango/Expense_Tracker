<!-- src/views/profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
</head>
<body>
    <h1>Welcome, <%= user.username %>!</h1>
    <p>Email: <%= user.email %></p>

    <h2>Your Total Expenses: $<%= totalExpenses %></h2>

    <h2>Your Expenses:</h2>
    <ul>
        <% expenses.forEach(expense => { %>
            <li>
                <strong>Amount:</strong> <%= expense.amount %><br>
                <strong>Description:</strong> <%= expense.description %><br>
                <strong>Category:</strong> <%= expense.category %><br>
                <strong>Date:</strong> <%= expense.date %><br>
            </li>
        <% }); %>
    </ul>

    <div>
        <!-- Add some buttons for interactions -->
        <button id="editProfileBtn">Edit Profile</button>
    </div>
    <script src="/js/profile.js"></script>
</body>
</html>

