<!-- src/views/profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <style>
        /* Basic styling for table and buttons */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
        }
        .no-expenses {
            color: #ff0000;
            font-weight: bold;
        }
        .button {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <h1>Welcome, <%= user.username %>!</h1>
    <p>Email: <%= user.email %></p>

    <h2>Your Total Expenses: $<%= totalExpenses %></h2>

    <h2>Your Expenses:</h2>

    <!-- Check if the user has expenses -->
    <% if (expenses.length === 0) { %>
        <p class="no-expenses">You currently have no expense records.</p>
    <% } else { %>
        <table>
            <thead>
                <tr>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <% expenses.forEach(expense => { %>
                    <tr>
                        <td>$<%= expense.amount %></td>
                        <td><%= expense.description %></td>
                        <td><%= expense.category %></td>
                        <td><%= expense.date.toLocaleDateString() %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>

    <div>
        <!-- Button to navigate to the create expense page -->
        <a href="/expenses/add_expense">
            <button class="button">Add New Expense</button>
        </a>
    </div>

    <script src="/js/profile.js"></script>
</body>
</html>
